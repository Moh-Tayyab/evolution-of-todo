{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "github-mcp"],
      "env": {
        "GITHUB_ACCESS_TOKEN": "GITHUB_TOKEN"
      }
    },
    "shadcn": {
      "command": "npx",
      "args": [
        "shadcn@latest",
        "mcp"
      ]
    },
    "aceternityui": {
      "command": "npx",
      "args": [
        "-y",
        "aceternityui-mcp"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "playwright-mcp"
      ],
      "env": {
        "PLAYWRIGHT_CHROMIUM_SANDBOX": "false"
      }
    },
    "vercel": {
      "command": "python",
      "args": [
        ".claude/skills/vercel-deployment/mcp-server.py"
      ],
      "env": {
        "VERCEL_TOKEN": "VERCEL_TOKEN"
      }
    },
    "huggingface": {
      "command": "python",
      "args": [
        ".claude/skills/huggingface-deployment/mcp-server.py"
      ],
      "env": {
        "HF_TOKEN": "HF_TOKEN"
      }
    }
  }
}
