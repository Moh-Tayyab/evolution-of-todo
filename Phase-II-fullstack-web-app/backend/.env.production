# Production Environment Variables for Backend
# Copy this to .env for production deployment

# Database URL (Neon Serverless PostgreSQL)
DATABASE_URL=postgresql://user:password@ep-xxx.region.neon.tech/neondb?sslmode=require

# JWT Secret - Generate a strong secret for production
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

# Better Auth URL
BETTER_AUTH_URL=https://your-frontend.vercel.app

# Environment
ENVIRONMENT=production
